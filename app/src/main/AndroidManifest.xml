<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wiseass.postrainer">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >
        <activity
            android:name="com.wiseass.postrainer.ui.activity.ActivityMovementMenu"
            android:label="@string/title_activity_movement_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.wiseass.postrainer.ui.activity.ActivityMovementDetail"
            android:label="@string/title_activity_movement_detail"
            android:theme="@style/AppTheme.Inverse" />
        <activity
            android:name="com.wiseass.postrainer.ui.activity.ActivitySettings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.wiseass.postrainer.ui.activity.ActivityReminders"
            android:label="@string/title_activity_reminders"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wiseass.postrainer.ui.activity.ActivityAlarmReceiver"
            android:label="@string/title_activity_manage_reminder"
            android:theme="@style/AppTheme.Inverse" />

    </application>

</manifest>